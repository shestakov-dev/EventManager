generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model EventType {
    id          String  @id @default(uuid()) @db.Uuid
    name        String
    description String?
    events      Event[]
}

model Lecturer {
    id String @id @default(uuid()) @db.Uuid

    name  String
    email String  @unique
    phone String?

    events Event[]
}

model Event {
    id String @id @default(uuid()) @db.Uuid

    name String
    city String
    date DateTime

    typeId String    @db.Uuid
    type   EventType @relation(fields: [typeId], references: [id])

    lecturers Lecturer[]
}
